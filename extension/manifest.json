{
  "manifest_version": 3,
  "name": "ETHMem",
  "description": "Decentralized memory for ChatGPT and Claude - Connect your wallet to store conversations on-chain.",
  "version": "0.1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://chat.openai.com/*", "https://claude.ai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://claude.ai/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "pageScript.js", "ethAdapter.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ETHMem"
  }
}
